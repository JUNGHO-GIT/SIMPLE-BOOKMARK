{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"outDir": "out",
		"rootDir": "src",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"lib": [
			"ESNext"
		],
		"types": [
			"node",
			"vscode"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"out"
	]
}