{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "out",
    "typeRoots": [
      "node_modules/@types",
      "langs/types"
    ],
    "types": [
      "node",
      "vscode"
    ]
  },
  "include": [
    "src/**/*",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "out",
    "**/*.spec.ts"
  ]
}
