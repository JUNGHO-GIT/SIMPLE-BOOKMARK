{
  "name": "simple-bookmark",
  "displayName": "Simple-Bookmark",
  "description": "A Simple Bookmark Manager for VSCode",
  "publisher": "JUNGHO",
  "icon": "logo.webp",
  "license": "Apache-2.0",
  "main": "./out/extension.js",
  "version": "2.8.8",
  "repository": {
    "type": "git",
    "url": "https://github.com/JUNGHO-GIT/SIMPLE-BOOKMARK.git"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "explorer",
    "bookmark",
    "sync",
    "realtime",
    "file",
    "manager",
    "watcher"
  ],
  "activationEvents": [
    "onView:Simple-Bookmark",
    "onCommand:Simple-Bookmark.addbookmark",
    "onCommand:Simple-Bookmark.refreshentry",
    "onCommand:Simple-Bookmark.copybookmark",
    "onCommand:Simple-Bookmark.pastebookmark",
    "onCommand:Simple-Bookmark.pasterootbookmark",
    "onCommand:Simple-Bookmark.renamebookmark",
    "onCommand:Simple-Bookmark.removebookmark",
    "onCommand:Simple-Bookmark.removeallbookmark",
    "onCommand:Simple-Bookmark.createfolder",
    "onCommand:Simple-Bookmark.createfile",
    "onCommand:Simple-Bookmark.expandexplorer",
    "onCommand:Simple-Bookmark.expandfolder",
    "onCommand:Simple-Bookmark.openLogOutput",
    "onCommand:Simple-Bookmark.openExtensionHostLog"
  ],
  "contributes": {
    "outputChannels": [
      "Simple-Bookmark"
    ],
    "views": {
      "explorer": [
        {
          "id": "Simple-Bookmark",
          "name": "Simple-Bookmark",
          "icon": "$(bookmark)",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "commands": [
      {
        "command": "Simple-Bookmark.addbookmark",
        "title": "Add to Bookmarks",
        "category": "Simple-Bookmark"
      },
      {
        "command": "Simple-Bookmark.refreshentry",
        "title": "Refresh Bookmarks",
        "category": "Simple-Bookmark",
        "icon": "$(refresh)"
      },
      {
        "command": "Simple-Bookmark.copybookmark",
        "title": "Copy",
        "category": "Simple-Bookmark",
        "icon": "$(copy)"
      },
      {
        "command": "Simple-Bookmark.pastebookmark",
        "title": "Paste",
        "category": "Simple-Bookmark",
        "icon": "$(replace-all)"
      },
      {
        "command": "Simple-Bookmark.pasterootbookmark",
        "title": "Paste to Root",
        "category": "Simple-Bookmark",
        "icon": "$(replace-all)"
      },
      {
        "command": "Simple-Bookmark.createfolder",
        "title": "Create Folder",
        "category": "Simple-Bookmark",
        "icon": "$(new-folder)"
      },
      {
        "command": "Simple-Bookmark.createfile",
        "title": "Create File",
        "category": "Simple-Bookmark",
        "icon": "$(new-file)"
      },
      {
        "command": "Simple-Bookmark.removebookmark",
        "title": "Remove",
        "category": "Simple-Bookmark",
        "icon": "$(remove-close)"
      },
      {
        "command": "Simple-Bookmark.removeallbookmark",
        "title": "Remove All",
        "category": "Simple-Bookmark",
        "icon": "$(terminal-kill)"
      },
      {
        "command": "Simple-Bookmark.renamebookmark",
        "title": "Rename",
        "category": "Simple-Bookmark",
        "icon": "$(edit)"
      },
      {
        "command": "Simple-Bookmark.expandexplorer",
        "title": "Expand Explorer Folders",
        "category": "Simple-Bookmark",
        "icon": "$(expand-all)"
      },
      {
        "command": "Simple-Bookmark.expandfolder",
        "title": "Expand This Folder",
        "category": "Simple-Bookmark",
        "icon": "$(expand-all)"
      }
    ],
    "keybindings": [
      {
        "key": "shift+alt+a",
        "command": "Simple-Bookmark.addbookmark",
        "when": "focusedView == Simple-Bookmark"
      },
      {
        "key": "shift+alt+a",
        "command": "Simple-Bookmark.addbookmark",
        "when": "explorerViewletVisible && filesExplorerFocus"
      },
      {
        "key": "ctrl+c",
        "command": "Simple-Bookmark.copybookmark",
        "when": "focusedView == Simple-Bookmark"
      },
      {
        "key": "ctrl+v",
        "command": "Simple-Bookmark.pastebookmark",
        "when": "focusedView == Simple-Bookmark"
      },
      {
        "key": "shift+alt+d",
        "command": "Simple-Bookmark.removebookmark",
        "when": "focusedView == Simple-Bookmark"
      },
      {
        "key": "shift+alt+r",
        "command": "Simple-Bookmark.renamebookmark",
        "when": "focusedView == Simple-Bookmark"
      },
      {
        "key": "shift+alt+y",
        "command": "Simple-Bookmark.expandexplorer",
        "when": "explorerViewletVisible && !explorerResourceIsFolder"
      },
      {
        "key": "shift+alt+y",
        "command": "Simple-Bookmark.expandfolder",
        "when": "explorerViewletVisible && explorerResourceIsFolder && filesExplorerFocus"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "Simple-Bookmark.refreshentry",
          "when": "view == Simple-Bookmark",
          "group": "navigation"
        },
        {
          "command": "Simple-Bookmark.copybookmark",
          "when": "view == Simple-Bookmark",
          "group": "navigation"
        },
        {
          "command": "Simple-Bookmark.pasterootbookmark",
          "when": "view == Simple-Bookmark",
          "group": "navigation"
        },
        {
          "command": "Simple-Bookmark.removeallbookmark",
          "when": "view == Simple-Bookmark",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "Simple-Bookmark.copybookmark",
          "when": "view == Simple-Bookmark",
          "group": "1_clipboard@1"
        },
        {
          "command": "Simple-Bookmark.pastebookmark",
          "when": "view == Simple-Bookmark && viewItem == bookmarkFolder",
          "group": "1_clipboard@2"
        },
        {
          "command": "Simple-Bookmark.pastebookmark",
          "when": "view == Simple-Bookmark && viewItem == bookmarkFile",
          "group": "1_clipboard@3"
        },
        {
          "command": "Simple-Bookmark.renamebookmark",
          "when": "view == Simple-Bookmark && (viewItem == bookmarkFile || viewItem == bookmarkFolder)",
          "group": "2_modification@0"
        },
        {
          "command": "Simple-Bookmark.createfolder",
          "when": "view == Simple-Bookmark && viewItem == bookmarkFolder",
          "group": "2_modification@1"
        },
        {
          "command": "Simple-Bookmark.createfile",
          "when": "view == Simple-Bookmark && viewItem == bookmarkFolder",
          "group": "2_modification@2"
        },
        {
          "command": "Simple-Bookmark.removebookmark",
          "when": "view == Simple-Bookmark",
          "group": "4_danger@1"
        },
        {
          "command": "Simple-Bookmark.removebookmark",
          "when": "view == Simple-Bookmark",
          "group": "inline"
        },
        {
          "command": "Simple-Bookmark.renamebookmark",
          "when": "view == Simple-Bookmark",
          "group": "inline"
        }
      ],
      "explorer/context": [
        {
          "command": "Simple-Bookmark.addbookmark",
          "when": "explorerResourceIsFolder || explorerResourceIsFile",
          "group": "2_workspace@1"
        },
        {
          "command": "Simple-Bookmark.expandfolder",
          "when": "explorerResourceIsFolder",
          "group": "2_workspace@2"
        }
      ]
    },
    "configuration": {
      "title": "Simple-Bookmark",
      "properties": {
        "Simple-Bookmark.logLevel": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "debug",
            "info",
            "warn",
            "error"
          ],
          "default": "info"
        },
        "Simple-Bookmark.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh bookmarks when files change"
        },
        "Simple-Bookmark.showSyncStatus": {
          "type": "boolean",
          "default": true,
          "description": "Show synchronization status in bookmark items"
        },
        "Simple-Bookmark.deleteMode": {
          "type": "string",
          "enum": [
            "ask",
            "bookmarkOnly",
            "bookmarkAndOriginal"
          ],
          "enumDescriptions": [
            "Show selection dialog every time when deleting bookmarks",
            "Always delete bookmark only (keep original files)",
            "Always delete both bookmark and original files together"
          ],
          "default": "ask",
          "description": "Set the default behavior when deleting bookmarks"
        }
      }
    }
  },
  "engines": {
    "vscode": ">=1.106.1",
    "node": ">=21.0.0",
    "npm": ">=10.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "start": "bun .node/swc.cjs --bun --start --server",
    "build": "bun .node/swc.cjs --bun --build --server",
    "fix": "bun .node/fix.cjs --bun --fix",
    "reset": "bun .node/reset.cjs --bun --reset",
    "vsce": "bun .node/vsce.cjs --bun --package",
    "git-fetch": "bun .node/git.cjs --bun --fetch",
    "git-push": "bun .node/git.cjs --bun --push"
  },
  "dependencies": {
    "minimatch": "^10.1.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.3",
    "@swc/helpers": "^0.5.17",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.106.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "mocha": "^11.7.5",
    "ts-morph": "^27.0.2",
    "ts-prune": "^0.10.3",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3"
  }
}
